# Supabase Self-Hosted Environment Template
# Copy this to .env and fill in your values

# PostgreSQL Configuration
POSTGRES_PASSWORD=YOUR_POSTGRES_PASSWORD_HERE
POSTGRES_USER=postgres
POSTGRES_DB=postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432

# JWT Configuration
JWT_EXPIRY=3600
JWT_SECRET=YOUR_JWT_SECRET_HERE
ANON_KEY=YOUR_ANON_KEY_HERE
SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY_HERE

# API Configuration
API_EXTERNAL_URL=http://localhost:8000
SUPABASE_PUBLIC_URL=http://localhost:8000

# Studio Configuration
STUDIO_DEFAULT_ORGANIZATION=Default Organization
STUDIO_DEFAULT_PROJECT=Default Project
STUDIO_PORT=8000
PUBLIC_REST_URL=http://localhost:8000/rest/v1/
PUBLIC_ANON_KEY=YOUR_ANON_KEY_HERE

# Auth Configuration
SITE_URL=http://localhost:3000
ADDITIONAL_REDIRECT_URLS=
DISABLE_SIGNUP=false
ENABLE_EMAIL_CONFIRMATIONS=false
ENABLE_EMAIL_AUTOCONFIRM=true
ENABLE_PHONE_CONFIRMATIONS=false
ENABLE_PHONE_AUTOCONFIRM=true

# Email Configuration (SMTP)
SMTP_ADMIN_EMAIL=admin@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SENDER_NAME=Supabase

# S3 Storage Configuration
GLOBAL_S3_BUCKET=supabase-storage
REGION=ap-south-2
GLOBAL_S3_ENDPOINT=https://s3.ap-south-2.amazonaws.com
GLOBAL_S3_FORCE_PATH_STYLE=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# OpenAI Configuration (for SQL Editor Assistant)
OPENAI_API_KEY=

# Analytics Configuration
LOGFLARE_API_KEY=
LOGFLARE_SOURCE_TOKEN=
ANALYTICS_ENABLED=true

# BigQuery Analytics (Optional)
BIGQUERY_PROJECT_ID=pure-muse-451411-h7
BIGQUERY_DATASET_ID=supabase_analytics
GOOGLE_APPLICATION_CREDENTIALS=/app/gcloud.json

# Dashboard Configuration
DASHBOARD_USERNAME=supabase
DASHBOARD_PASSWORD=this_password_is_insecure_and_should_be_updated

# Secrets
SECRET_KEY_BASE=
OPERATOR_TOKEN=
LOGFLARE_SOURCE_TOKEN=

# Additional Configuration
ENABLE_LOGS=true
LOG_LEVEL=info